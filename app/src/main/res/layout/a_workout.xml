<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.example.haryono.workout.UI.Menu">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ivWorkoutAnimation"
                    android:layout_width="163dp"
                    android:layout_height="163dp"
                    android:layout_centerInParent="true"/>

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/button_video"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:id="@+id/ivVideo" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="3dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:orientation="vertical">

                <com.example.haryono.workout.Font.CustomTextView2
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:text="Muscles"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:textDirection="ltr"
                    android:background="@drawable/rounded_shape_text"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat" />

                <com.example.haryono.workout.Font.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:text="Paha"
                    android:textColor="@android:color/black"
                    android:id="@+id/tvMuscles" />

                <com.example.haryono.workout.Font.CustomTextView2
                    android:layout_width="210dp"
                    android:layout_height="30dp"
                    android:text="Techinique Summary"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:textDirection="ltr"
                    android:background="@drawable/rounded_shape_text"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat" />

                <com.example.haryono.workout.Font.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/workout_technique"
                    android:textColor="@android:color/black"
                    android:id="@+id/ctTechnique" />

                <com.example.haryono.workout.Font.CustomTextView2
                    android:layout_width="130dp"
                    android:layout_height="25dp"
                    android:text="Description"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:paddingLeft="18dp"
                    android:textDirection="ltr"
                    android:background="@drawable/rounded_shape_text"
                    android:textAlignment="textStart"
                    tools:ignore="RtlCompat" />

                <com.example.haryono.workout.Font.CustomTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/workout_description"
                    android:textColor="@android:color/black"
                    android:id="@+id/ctDescription" />
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>
