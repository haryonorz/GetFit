<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:src="@drawable/background_fullworkout"
            android:scaleType="centerCrop"
            android:id="@+id/ivExercises" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="@drawable/effect_background_exercises"/>
        <com.example.haryono.workout.Font.CustomTextView3
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="Level Beginner"
            android:textSize="12sp"
            android:layout_marginLeft="12dp"
            android:layout_marginBottom="12dp"
            android:textColor="@android:color/white"
            android:id="@+id/tvExercisesLevel" />
        <com.example.haryono.workout.Font.CustomTextView3
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvExercisesLevel"
            android:text="Full Body Exercises"
            android:textSize="19sp"
            android:layout_marginLeft="12dp"
            android:textColor="@android:color/white"
            android:id="@+id/tvExercisesName" />
    </RelativeLayout>
</LinearLayout>